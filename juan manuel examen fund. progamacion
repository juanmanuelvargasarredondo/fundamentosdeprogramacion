    public int potencia(int b, int e) {
        if (e==1) {
            return b;
        } if (e==0) {
            return 1;
        } else{
            return b * potencia(b, e-1);
  //Pregunta 5:
  public int Potenciacion(int b, int e) {
    if (e==1) {
      return b;
    } if (e==0) {
        return 1;
    } else{
        return b * Potenciacion(b, e-1);
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      








